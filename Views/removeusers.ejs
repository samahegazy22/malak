    <script>
        // Get all remove buttons
        var removeButtons = document.querySelectorAll('.remove-user-btn');
        
        // Loop through each button and attach click event listener
        removeButtons.forEach(function(button) {
            button.addEventListener('click', function() {
                // Get the parent element of the button (which is the user div)
                var userDiv = this.parentElement;
                // Remove the user div from the DOM
                userDiv.remove();
            });
        });
    </script>
